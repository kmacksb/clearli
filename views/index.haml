!!!
%html  
  %head  
    %title #{@city}'s Weather
    %link(rel="stylesheet" href="css/styles.css")  
  %link(href='http://fonts.googleapis.com/css?family=Lato:100' rel = 'stylesheet' type = 'text/css')
    

  %body  
    #wrapper  
      #header  
        %h1 The weather in #{@city} is...     
      #content 
        %figure{"class" => "icons"}
          %canvas{"id" => "#{@current_icon}", "width" => "64", "height" => "64"}

        %h1 Current Temp  
        %p  
          #{@current_temp} °C

        %h1 Yesterdays Temp
        %p
          #{@yesterday_temp} °C

        %h1 Currently
        %p
          #{@temp_difference} #{@unit} #{@temp_description}
          and #{@wind_description} than this time yesterday













%script{"src" => 'javascripts/skycons.js', "type" => 'text/javascript'}
%script
  var icons = new Skycons({"color": "white"});
  icons.set("clear-day", Skycons.CLEAR_DAY);
  icons.set("clear-night", Skycons.CLEAR_NIGHT);
  icons.set("partly-cloudy-day", Skycons.PARTLY_CLOUDY_DAY);
  icons.set("partly-cloudy-night", Skycons.PARTLY_CLOUDY_NIGHT);
  icons.set("cloudy", Skycons.CLOUDY);
  icons.set("rain", Skycons.RAIN);
  icons.set("sleet", Skycons.SLEET);
  icons.set("snow", Skycons.SNOW);
  icons.set("wind", Skycons.WIND);
  icons.set("fog", Skycons.FOG);
%script
  icons.play();
